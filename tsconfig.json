{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "jsx/*"]
    },
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "es6", "dom", "es2017"
    ],
    "strict" : true
  }
}
